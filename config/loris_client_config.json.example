{
  "api": {
    "base_url": "https://example-loris-instance.ca/",
    "username": "api_user",
    "password": "secure_password_here",
    "token_expiry_minutes": 55
  },

  "database": {
    "host": "localhost",
    "name": "loris",
    "user": "lorisuser",
    "password": "db_password_here"
  },

  "data_access": {
    "mode": "local",
    "base_path": "/data"
  },

  "logging": {
    "level": "INFO",
    "log_dir": "/opt/loris-php-client/logs"
  },

  "notifications": {
      "enabled": true,
      "modalities": {
        "clinical": { "enabled": true }
      },
      "smtp": {
        "use_native_mail": true,
        "from": "noreply@server.ca"
      }
    },

  "collections": [
    {
      "name": "example_collection_1",
      "base_path": "/data/example_collection_1",
      "enabled": true,
      "projects": [
        {"name": "example_project_1", "enabled": true},
        {"name": "example_project_2", "enabled": true}
      ]
    },
    {
      "name": "example_collection_2",
      "base_path": "/data/example_collection_2",
      "enabled": true,
      "projects": [
        {"name": "example_project_3", "enabled": true}
      ]
    }
  ]
}
